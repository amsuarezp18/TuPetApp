<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RecommendFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:padding="40dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/textSistemaRecomendador"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Sistema recomendador"
               android:textColor="@color/pink_dark"
               android:textSize="30sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.0" />

           <TextView
               android:id="@+id/textFirstQ"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="¿Tienes casa propia?"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               android:textColor="@color/black"
               app:layout_constraintTop_toBottomOf="@+id/textSistemaRecomendador"
               app:layout_constraintVertical_bias="0.02" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/chese"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textFirstQ"
               app:layout_constraintVertical_bias="0.02">

               <CheckBox
                   android:id="@+id/checkbox_one"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sí"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.06"
                   app:layout_constraintStart_toStartOf="parent" />

               <CheckBox
                   android:id="@+id/checkbox_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="No"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.327"
                   app:layout_constraintStart_toStartOf="parent" />
           </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/textSecondQ"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="¿Tienes niños menores de 12 años? "
               app:layout_constraintBottom_toBottomOf="parent"
               android:textColor="@color/black"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/chese"
               app:layout_constraintVertical_bias="0.02" />


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cheseTwo"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textSecondQ"
               app:layout_constraintVertical_bias="0.02">

               <CheckBox
                   android:id="@+id/checkbox_two_one"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Sí"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.056"
                   app:layout_constraintStart_toStartOf="parent" />

               <CheckBox
                   android:id="@+id/checkbox_two_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="No"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.327"
                   app:layout_constraintStart_toStartOf="parent" />
           </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/textThirdQ"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="¿Cuánto tiempo en el día le dedicarías a tu mascotas?"
               app:layout_constraintBottom_toBottomOf="parent"
               android:textColor="@color/black"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cheseTwo"
               app:layout_constraintVertical_bias="0.02" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cheseTree"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textThirdQ"
               app:layout_constraintVertical_bias="0.0">

               <CheckBox
                   android:id="@+id/checkbox_tree_one"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1 hora"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.066" />

               <CheckBox
                   android:id="@+id/checkbox_tree_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2 horas"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/checkbox_tree_one"
                   app:layout_constraintVertical_bias="0.151" />

               <CheckBox
                   android:id="@+id/checkbox_tree_tree"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="4 horas"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/checkbox_tree_two"
                   app:layout_constraintVertical_bias="0.151" />

               <CheckBox
                   android:id="@+id/checkbox_tree_four"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Más de 4 horas"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/checkbox_tree_tree"
                   app:layout_constraintVertical_bias="0.151" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/textFourQ"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="En caso de ausentarse en tu casa, ¿con quien dejarías a tu mascota? "
               app:layout_constraintBottom_toBottomOf="parent"
               android:textColor="@color/black"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cheseTree"
               app:layout_constraintVertical_bias="0.02" />


           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/cheseFour"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textFourQ"
               app:layout_constraintVertical_bias="0.01">

               <CheckBox
                   android:id="@+id/checkbox_four_one"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Con un familiar"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintVertical_bias="0.066" />

               <CheckBox
                   android:id="@+id/checkbox_four_two"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="En casa"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/checkbox_four_one"
                   app:layout_constraintVertical_bias="0.151" />

               <CheckBox
                   android:id="@+id/checkbox_four_tree"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="En una guardería"
                   android:textColor="@color/black"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.021"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/checkbox_four_two"
                   app:layout_constraintVertical_bias="0.151" />

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/recomendacionbtn"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:background="@drawable/btnpinkylight"
               android:text="Recomendación"
               android:textColor="@color/white"
               android:textAllCaps="false"
               android:textSize="16sp"
               android:textStyle="bold"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cheseFour"
               app:layout_constraintVertical_bias=".7"
               app:layout_constraintWidth_percent=".8" />


       </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>