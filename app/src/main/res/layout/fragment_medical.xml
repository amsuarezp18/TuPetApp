<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/gray_bckg"
    android:layout_height="match_parent"
    tools:context=".fragments.MedicalFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textTittleMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguimiento médico"
            android:textColor="@color/pink_dark"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.008" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintOne"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/btnpinkystroke"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101">

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_doggie"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.019"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/namePet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coco"
                android:textColor="@color/blue_text"
                android:textSize="25sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@id/logo_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.137" />

            <TextView
                android:id="@+id/edadPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad: 6 meses"
                android:textColor="@color/blue_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@id/logo_img"
                app:layout_constraintTop_toBottomOf="@id/namePet"
                app:layout_constraintVertical_bias="0.008" />


            <TextView
                android:id="@+id/razaPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza: Border Collie"
                android:textColor="@color/blue_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.23"
                app:layout_constraintStart_toEndOf="@id/logo_img"
                app:layout_constraintTop_toBottomOf="@id/edadPet"
                app:layout_constraintVertical_bias="0.008" />


            <TextView
                android:id="@+id/generoPet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Género: Hembra"
                android:textColor="@color/blue_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@id/logo_img"
                app:layout_constraintTop_toBottomOf="@id/razaPet"
                app:layout_constraintVertical_bias="0.008" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintOne"
            app:layout_constraintVertical_bias="0.106">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardOne"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white"
                android:drawableTop="@drawable/ic_baseline_event_available_24"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="25dp"
                android:paddingBottom="30dp"
                android:text="Mis vacunas"
                android:textAllCaps="false"
                android:textColor="@color/pink_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardtwo"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_white"
                android:drawableTop="@drawable/ic_baseline_medical_services_24"
                android:paddingLeft="3dp"
                android:paddingTop="25dp"
                android:paddingBottom="30dp"
                android:paddingRight="3dp"
                android:text="Historial médico"
                android:textAllCaps="false"
                android:textColor="@color/pink_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/cardOne"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardTree"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_white"
                android:drawableTop="@drawable/ic_pet_medical"
                android:paddingLeft="3dp"
                android:paddingTop="25dp"
                android:paddingBottom="30dp"
                android:paddingRight="3dp"
                android:text="Control de peso"
                android:textAllCaps="false"
                android:textColor="@color/pink_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardOne"
                app:layout_constraintVertical_bias="0.249" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardFour"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_white"
                android:drawableTop="@drawable/ic_baseline_add_alert_24"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="25dp"
                android:paddingBottom="30dp"
                android:text="Recordatorios"
                android:textAllCaps="false"
                android:textColor="@color/pink_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/cardTree"
                app:layout_constraintTop_toBottomOf="@id/cardtwo"
                app:layout_constraintVertical_bias="0.229" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>